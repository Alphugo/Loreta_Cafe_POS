<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center">

    <!-- Icon -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ–¨ï¸"
        android:textSize="48sp"
        android:layout_marginBottom="16dp" />

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Printer Not Connected"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp" />

    <!-- Message -->
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please check your printer connection and try again."
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        android:layout_marginBottom="24dp" />

    <!-- Buttons -->
    <Button
        android:id="@+id/btnRetry"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Retry"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:background="@drawable/button_rounded_brown"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Printer Settings"
        android:textColor="@color/brown"
        android:textStyle="bold"
        android:background="@drawable/button_rounded_outline_brown"
        android:layout_marginBottom="8dp" />

    <Button
        android:id="@+id/btnSkip"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Skip"
        android:textColor="#999999"
        android:background="?attr/selectableItemBackground" />

</LinearLayout>

