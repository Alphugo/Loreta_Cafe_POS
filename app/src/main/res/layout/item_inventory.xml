<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/margin_medium"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium"
        android:gravity="center_vertical"
        android:minHeight="72dp">

        <!-- Item Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingEnd="@dimen/margin_small">

            <!-- Ingredients Name with Coffee Bean Icon -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <ImageView
                    android:id="@+id/ivCoffeeBean"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/coffee_bean_icon"
                    android:contentDescription="Coffee Bean"
                    android:layout_marginEnd="4dp"
                    android:scaleType="fitCenter" />

                <TextView
                    android:id="@+id/tvItemName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ingredients Name"
                    android:textColor="#000000"
                    android:textSize="@dimen/text_size_large"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:ellipsize="end" />
            </LinearLayout>
            
            <!-- Status Icon -->
            <ImageView
                android:id="@+id/ivStatusIcon"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@drawable/stock_good_condition"
                android:scaleType="fitCenter"
                android:contentDescription="Stock Status"
                android:layout_marginTop="@dimen/margin_small" />

            <!-- Product Quantity -->
            <TextView
                android:id="@+id/tvQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Quantity: 0"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_small"
                android:layout_marginTop="@dimen/margin_small" />

            <!-- Product Unit -->
            <TextView
                android:id="@+id/tvUnit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Unit: g, mL, pcs"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_small" />

            <!-- Product Cost -->
            <TextView
                android:id="@+id/tvCost"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Product Cost: â‚±100"
                android:textColor="#666666"
                android:textSize="@dimen/text_size_small" />

            <!-- Status -->
            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: In Stock"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:layout_marginTop="@dimen/margin_small" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingStart="8dp"
            android:paddingEnd="8dp">

            <ImageButton
                android:id="@+id/btnEdit"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginEnd="8dp"
                android:src="@drawable/edit_pen"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Edit"
                android:scaleType="fitCenter"
                android:padding="12dp" />

            <ImageButton
                android:id="@+id/btnDelete"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_delete"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Delete"
                android:scaleType="fitCenter"
                android:padding="12dp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>

